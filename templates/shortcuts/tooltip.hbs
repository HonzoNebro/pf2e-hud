<div class="header{{#if reason}} greyed{{/if}}">
    <div class="image" style="background-image: url({{img}});">
        {{!-- uses --}}
        {{#if uses}}
        <div class="uses">
            <span>{{uses.value}}</span>
            {{#if uses.max}}
            / <span>{{uses.max}}</span>
            {{/if}}
        </div>
        {{/if}}
    </div>
    <div class="title">{{{title}}}</div>
    <div class="subtitle">{{{subtitle}}}</div>
</div>
{{#if reason}}
<div class="details left">
    {{reason}}
</div>
{{/if}}
<div class="details right">
    {{#unless inactive}}
    {{#if altUse}}
    <div>{{@root.i18n.root 'rightClick'}} {{altUse}}</div>
    <div>{{@root.i18n 'click.control'}} {{@root.i18n 'click.popup'}}</div>
    {{else}}
    <div>{{@root.i18n.root 'rightClick'}} {{@root.i18n 'click.popup'}}</div>
    {{/if}}
    {{/unless}}
    <div>{{@root.i18n 'click.middle'}}</div>
</div>